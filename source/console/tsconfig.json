{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./src/app/",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "paths": {
            "@common-secure/*": ["secure/common/*"],
            "@env/*": ["../environments/*"],
            "@graphql/*": ["graphql/*"],
            "@models/*": ["models/*"],
            "@pipes/*": ["pipes/*"],
            "@services/*": ["services/*"],
            "@solutions/*": ["secure/child-views/*"]
        }
    }
}
