{
    "id": "mini-connected-factory-v1.2",
    "name": "Mini Connected Factory v1.2",
    "description": "AWS Mini Connected Factory v1.2",
    "prefix": "AMCF1_",
    "spec": {
        "devices": [{
                "defaultDeviceTypeId": "esp32-3d-belt-v1.0",
                "deviceBlueprintId": "afr-3d-belt-mini-connected-factory-v1.0",
                "ref": "device_0"
            },
            {
                "defaultDeviceTypeId": "deeplens-v1.0",
                "deviceBlueprintId": "gg-mini-connected-factory-v1.1",
                "ref": "device_1",
                "spec": {
                    "DeviceDefinitionVersion": {
                        "Devices": [{
                            "CertificateArn": "!GetAtt[device_0.cert.certificateArn]",
                            "SyncShadow": true,
                            "ThingArn": "!GetAtt[device_0.thingArn]"
                        }]
                    },
                    "FunctionDefinitionVersion": {
                        "Functions": [
                            {
                                "FunctionArn": "arn:aws:lambda:[AWS_REGION]:[AWS_ACCOUNT]:function:mini-connected-factory-belt-serial-node:MTM",
                                "FunctionConfiguration": {
                                    "EncodingType": "json",
                                    "Environment": {
                                        "ResourceAccessPolicies": [{
                                            "Permission": "rw",
                                            "ResourceId": "serial-port"
                                        }],
                                        "Variables": {
                                            "SERIALPORT_PORT": "/dev/ttyUSB0",
                                            "SERIALPORT_SPEED": "115200",
                                            "THING_NAME": "!GetAtt[device_0.thingName]"
                                        }
                                    },
                                    "MemorySize": 262144,
                                    "Pinned": true,
                                    "Timeout": 3
                                }
                            },
                            {
                                "FunctionArn": "arn:aws:lambda:[AWS_REGION]:[AWS_ACCOUNT]:function:mini-connected-factory-node:MTM",
                                "FunctionConfiguration": {
                                    "EncodingType": "json",
                                    "Environment": {
                                        "ResourceAccessPolicies": [],
                                        "Variables": {
                                            "THING_NAME": "!GetAtt[device_0.thingName]"
                                        }
                                    },
                                    "MemorySize": 262144,
                                    "Pinned": false,
                                    "Timeout": 5
                                }
                            }
                        ]
                    },
                    "ResourceDefinitionVersion": {
                        "Resources": [{
                            "Id": "serial-port",
                            "Name": "serial-port",
                            "ResourceDataContainer": {
                                "LocalDeviceResourceData": {
                                    "GroupOwnerSetting": {
                                        "AutoAddGroupOwner": false,
                                        "GroupOwner": "dialout"
                                    },
                                    "SourcePath": "/dev/ttyUSB0"
                                }
                            }
                        }]
                    },
                    "SubscriptionDefinitionVersion": {
                        "Subscriptions": [{
                            "Source": "arn:aws:lambda:[AWS_REGION]:[AWS_ACCOUNT]:function:mini-connected-factory-belt-serial-node:MTM",
                            "Subject": "mtm/!GetAtt[device_0.thingName]/sensors",
                            "Target": "arn:aws:lambda:[AWS_REGION]:[AWS_ACCOUNT]:function:mini-connected-factory-node:MTM"
                        }, {
                            "Source": "arn:aws:lambda:[AWS_REGION]:[AWS_ACCOUNT]:function:mini-connected-factory-belt-serial-node:MTM",
                            "Subject": "mtm/!GetAtt[device_0.thingName]/logger",
                            "Target": "cloud"
                        }, {
                            "Source": "GGShadowService",
                            "Subject": "$aws/things/!GetAtt[device_0.thingName]/shadow/update/accepted",
                            "Target": "arn:aws:lambda:[AWS_REGION]:[AWS_ACCOUNT]:function:mini-connected-factory-belt-serial-node:MTM"
                        }, {
                            "Source": "arn:aws:lambda:[AWS_REGION]:[AWS_ACCOUNT]:function:mini-connected-factory-node:MTM",
                            "Subject": "mtm/[CORE]/action",
                            "Target": "arn:aws:lambda:[AWS_REGION]:[AWS_ACCOUNT]:function:mini-connected-factory-camera-python:MTM"
                        }, {
                            "Source": "arn:aws:lambda:[AWS_REGION]:[AWS_ACCOUNT]:function:mini-connected-factory-camera-python:MTM",
                            "Subject": "mtm/[CORE]/inference",
                            "Target": "arn:aws:lambda:[AWS_REGION]:[AWS_ACCOUNT]:function:mini-connected-factory-node:MTM"
                        }]
                    }

                }
            }
        ]
    }
}
